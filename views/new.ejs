<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">New Blog</div>
	<form action="/blogs" method="POST" class="ui form">

		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="Post title is here"> <!--The name now creates an object and puts 'title' inside of it. So now the access is req.body.blog.title-->
		</div>

		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="Image url">
		</div>

		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"></textarea> 
		</div>
		
	
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<% include ./partials/footer %>