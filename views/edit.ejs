<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %> </div>
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form"> <!--This is a cheat to create a PUT method over HTML using method-override package!-->

		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>"> <!--The name now creates an object and puts 'title' inside of it. So now the access is req.body.blog.title-->
		</div>

		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>

		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"><%= blog.body %></textarea> 
		</div>
		
	
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<% include ./partials/footer %>